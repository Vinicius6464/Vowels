#include <stdio.h>

// primeiro sempre define a struct
struct pessoa {
    char nome[50];
    int idade;
    char cpf[15];     // cpf é string agora
    float tamanho;
};

int main() {
    int n;
    printf("Quantos cadastros deseja realizar?: ");
    scanf("%d", &n);

    struct pessoa p[n];

    // cadastro
    for (int i = 0; i < n; i++) {
        printf("\n---- PESSOA %d ----\n", i + 1);

        printf("Digite seu nome: ");
        scanf("%49s", p[i].nome);   // nome sem espaço

        printf("Digite sua idade: ");
        scanf("%d", &p[i].idade);

        printf("Digite seu CPF: ");
        scanf("%14s", p[i].cpf);    // agora lê como string

        printf("Digite sua altura em METROS: ");
        scanf("%f", &p[i].tamanho);
    }

    // mostrar dados
    printf("\n---- DADOS ----\n");
    for (int i = 0; i < n; i++) {
        printf("Pessoa %d -> nome: %s | idade: %d | CPF: %s | altura: %.2f\n",
               i + 1, p[i].nome, p[i].idade, p[i].cpf, p[i].tamanho);
    }

    return 0;
}
